<style>
    :root {
        --bg: #09090b;       /* Deepest Black */
        --card: #18181b;     /* Slightly lighter charcoal */
        --border: #27272a;   /* Subtle border for separation */
        --accent: #10b981;   /* Sharp Emerald Green */
        --text-main: #fafafa;
        --text-dim: #a1a1aa;
    }

    .page-wrapper {
        min-height: 100vh;
        background-color: var(--bg);
        display: flex;
        justify-content: center;
        padding: 120px 20px;
    }

    .profile-shell {
        width: 100%;
        max-width: 650px;
    }

    /* Top Identity Section */
    .identity-box {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 48px;
    }

    .avatar {
        width: 72px;
        height: 72px;
        background: var(--accent);
        color: #000;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        font-weight: 900;
    }

    .identity-box h1 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-main);
        letter-spacing: -0.05em;
        margin: 0;
    }

    .identity-box p {
        color: var(--text-dim);
        margin: 4px 0 0 0;
        font-size: 1.1rem;
    }

    /* Menu Section */
    .menu-label {
        color: var(--text-dim);
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 16px;
        display: block;
    }

    .menu-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .menu-item {
        background: var(--card);
        border: 1px solid var(--border);
        padding: 20px 24px;
        border-radius: 16px;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: all 0.2s ease;
    }

    .menu-item:hover {
        border-color: var(--accent);
        background: #1c1c20;
    }

    .menu-content {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .menu-icon {
        font-size: 1.4rem;
    }

    .menu-text {
        font-weight: 600;
        color: var(--text-main);
        font-size: 1.05rem;
    }

    .chevron {
        color: var(--text-dim);
        font-weight: 300;
    }

    /* Dangerous Action */
    .logout-zone {
        margin-top: 40px;
        padding-top: 24px;
        border-top: 1px solid var(--border);
    }

    .btn-logout {
        color: #ef4444;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: 0.2s;
    }

    .btn-logout:hover {
        opacity: 0.8;
    }
</style>

<div class="page-wrapper">
