<div class="main-wrapper" style="flex-direction: column; align-items: flex-start; max-width: 1000px; margin: auto;">
    <h1 style="color: white; margin-bottom: 30px; font-weight: 800;">My Rental Requests</h1>

    {{#each rentals}}
    <div style="background: white; width: 100%; border-radius: 15px; display: flex; padding: 20px; margin-bottom: 20px; align-items: center; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
        <img src="/asset-images/{{this.item}}.jpg" style="width: 100px; height: 100px; border-radius: 10px; object-fit: cover;">
        
        <div style="flex: 1; padding-left: 20px;">
            <h3 style="color: #111827; margin: 0;">{{this.itemDetails.Name}}</h3>
            <p style="color: #6b7280; margin: 5px 0;">Rent: â‚¹{{this.price}}/day</p>
        </div>

        <div style="text-align: right;">
            <span style="display: block; font-size: 0.8rem; color: #6b7280;">Status</span>
            <strong style="color: {{#if (eq this.status 'pending')}}#f59e0b{{else}}#059669{{/if}}; text-transform: uppercase;">
                {{this.status}}
            </strong>
        </div>
    </div>
    {{else}}
    <p style="color: white;">You haven't requested anything yet.</p>
    {{/each}}
</div>